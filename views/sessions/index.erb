<div class="sessionclassbody">
<h2 align=center> Session page </h2>

<h3>---  Session Information ---</h3>

<p>Class:'<%= @gym_class.name %>'</p>
<p>Time Slot:<%= @session.time_slot %>hrs</p>
<p>booking capacity: <%= @session.maximum_bookings %> </p>
<p>available bookings: <%= @session.available_bookings %> </p>

<% if @bookings.length != 0 %>
<h3 > Current Active Bookings </h3>
<hr>
	<% for booking in @bookings%>
		<h3>--- Booking Information: ---</h3>
		<p>Booking ID: <%= booking.id %></p>
		<h3>--- Member Information: ---</h2>
		<p>ID: <%= booking.member_id %></p>
		<p>name: <%= Member.find_by_id(booking.member_id).fullname %></p>
		<p>Account Type: <%= Member.find_by_id(booking.member_id).account_type %> </p>
<hr>
	<% end %>
	<hr>
	<p align=center>--- End of Listing ---</p>
<% else %>
<p>This Session has no bookings</p>

<% end %>

<form action="/sessions/<%=@session.id%>/delete" method="POST">
	<input type="Submit" Value="Click Here To Delete this Session">
</form>
<br>
</div>
